@{
    var title = ViewData["Title"] ?? "Cuestionario NOM-35";
}
<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@title - NOM35</title>

    <!-- Bootstrap -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">

    <!-- Fuente moderna -->
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600&display=swap" rel="stylesheet">

    <!-- Estilos personalizados -->
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-primary shadow-sm">
        <div class="container">
            <a class="navbar-brand fw-semibold" href="/">NOM-35</a>

            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#mainNav"
                    aria-controls="mainNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse" id="mainNav">
                <ul class="navbar-nav me-auto mb-2 mb-lg-0">

                    <!-- Cuestionario -->
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Cuestionario" asp-action="Inicio">Cuestionario</a>
                    </li>

                    <!-- Reportes -->
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" href="#" id="repDrop" role="button" data-bs-toggle="dropdown"
                           aria-expanded="false">Reportes</a>
                        <ul class="dropdown-menu" aria-labelledby="repDrop">
                            <li>
                                <a class="dropdown-item" asp-controller="Reportes" asp-action="Validacion">
                                    Validación de carga
                                </a>
                            </li>
                        </ul>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Reportes" asp-action="Dashboard">Dashboard</a>
                    </li>

                </ul>

                <!-- Ir a Evaluación por ID -->
                <form class="d-flex" role="search" onsubmit="return goEvalById(event)">
                    <input class="form-control me-2" type="number" min="1" id="evalId" placeholder="ID cuestionario"
                           aria-label="ID cuestionario">
                    <button class="btn btn-light" type="submit">Evaluación</button>
                </form>
            </div>
        </div>
    </nav>

    <script>
        function goEvalById(e){
          e.preventDefault();
          const id = document.getElementById('evalId').value?.trim();
          if(!id) return false;
          window.location.href = `/Reportes/Evaluacion/${id}`;
          return false;
        }
    </script>


    <main class="container py-4">
        @RenderBody()
    </main>

    <footer class="footer mt-auto py-3 border-top text-center text-muted">
        <small>&copy; @(DateTime.Now.Year) NOM-35 Cuestionario</small>
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
