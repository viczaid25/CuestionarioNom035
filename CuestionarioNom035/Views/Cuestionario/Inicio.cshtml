@model NOM35.Web.ViewModels.InicioVM
@{
    ViewData["Title"] = "Inicio del Cuestionario";
}

<div class="card p-4 mx-auto" style="max-width: 520px;">
    <h3 class="text-center mb-4">Inicio del Cuestionario NOM-35</h3>
    <form asp-action="Inicio" method="post">
        <div class="mb-3">
            <label class="form-label">Número de empleado</label>
            <input asp-for="NumeroEmpleado" class="form-control" placeholder="Ej. 1025" />
            <span asp-validation-for="NumeroEmpleado" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label class="form-label">Área</label>
            <select asp-for="Area" asp-items="Model.AreasDisponibles" class="form-select">
                <option value="">-- Selecciona un área --</option>
            </select>
            <span asp-validation-for="Area" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label class="form-label">Tipo de empleado</label>
            <div class="d-flex gap-3">
                <div class="form-check">
                    <input class="form-check-input" type="radio" asp-for="TipoEmpleado" value="DL" id="tipoDL" />
                    <label class="form-check-label" for="tipoDL">DL</label>
                </div>
                <div class="form-check">
                    <input class="form-check-input" type="radio" asp-for="TipoEmpleado" value="IDL" id="tipoIDL" />
                    <label class="form-check-label" for="tipoIDL">IDL</label>
                </div>
            </div>
            <span asp-validation-for="TipoEmpleado" class="text-danger"></span>
        </div>

        <button type="submit" class="btn w-100">Comenzar</button>
    </form>
</div>
